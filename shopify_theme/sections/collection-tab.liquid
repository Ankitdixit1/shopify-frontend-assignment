<style>
  .collection-tabs-section {
    padding: 20px 0;
    font-family: 'Inter', sans-serif;
  }

  .collection-tabs {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 10px;
  }

  .collection-tab {
    background: transparent;
    border: 1px solid #ccc;
    color: #000;
    padding: 5px 10px;
    border-radius: 9999px;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s, border-color 0.3s;
    text-decoration: none;
    font-size: 12px;
    font-weight: 400;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  
  .collection-tab:hover {
    background-color: #f0f0f0;
  }

  .collection-tab.active {
    background-color: #000;
    color: #fff;
    border-color: #000;
  }

  .collection-tab.active:hover {
    background-color: #333;
  }

  @media (max-width: 768px) {
    .collection-tabs {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>

<div class="collection-tabs-section">
  <div class="collection-tabs">
    {%- for block in section.blocks -%}
      {% liquid
        assign collection_handle = block.settings.collection.handle
        assign is_active = false
        if collection and collection.handle == collection_handle
          assign is_active = true
        endif
      %}
      <a href="{{ block.settings.collection.url }}" 
         class="collection-tab {% if is_active %}active{% endif %}" 
         data-collection-handle="{{ collection_handle }}">
        {{ block.settings.tab_title }}
      </a>
    {%- endfor -%}
  </div>
</div>

{% schema %}
  {
    "name": "Collection Tabs",
    "blocks": [
      {
        "type": "collection",
        "name": "Collection Tab",
        "settings": [
          {
            "type": "text",
            "id": "tab_title",
            "label": "Tab Title",
            "default": "All"
          },
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection Tabs",
        "blocks": [
          {
            "type": "collection",
            "settings": {
              "tab_title": "All"
            }
          }
        ]
      }
    ]
  }
{% endschema %}
